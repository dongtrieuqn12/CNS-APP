<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".Activities.TapActivity">

    <TextView
        android:id="@+id/headers_tap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CNS app"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"/>

    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:layout_gravity="center"
        android:gravity="center">

        <ImageView
            android:id="@+id/image"
            android:layout_width="250dp"
            android:layout_height="180dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@drawable/img"
            tools:ignore="ObsoleteLayoutParam"
            android:layout_marginBottom="40dp"/>

        <ImageView
            android:id="@+id/image1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:background="@drawable/nfcicon"
            android:contentDescription="hello"
            />

        <ImageView
            android:id="@+id/card_visa"
            android:layout_width="170dp"
            android:layout_height="240dp"
            android:background="@drawable/card"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"/>
    </FrameLayout>

    <TextView
        android:id="@+id/guide_text"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:text="Chạm và giữ thẻ tới khi giao dịch thành công"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="16sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/count_timeout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30"
        android:textColor="#424242"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/background_text"
        tools:ignore="HardcodedText" />



</LinearLayout>