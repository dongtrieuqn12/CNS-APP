<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view_invoices="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_settlment"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_gravity="center"
    android:layout_marginBottom="2dp"
    android:background="#FFFFFF"
    card_view_invoices:cardCornerRadius="2dp">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#FFF"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            tools:ignore="RtlHardcoded">
            <TextView
                android:id="@+id/invoices_settlement_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bánh"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/invoices_selected_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textColor="#818181"
                android:text="nhân viên CNS"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/settlement_datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#606060"
                android:text=""
                android:textStyle="bold"/>

        </LinearLayout>

        <TextView
            android:id="@+id/settlement_price"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="30000"
            android:gravity="right"
            android:layout_gravity="center"
            android:layout_marginRight="16dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            tools:ignore="HardcodedText,RtlHardcoded" />
    </LinearLayout>

</android.support.v7.widget.CardView>