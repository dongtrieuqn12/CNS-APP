<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view_invoices="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_invoices"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_gravity="center"
    android:layout_margin="0dp"
    android:background="#FFFFFF"
    card_view_invoices:cardCornerRadius="5dp">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#FFF"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="16dp">
            <TextView
                android:id="@+id/invoices_selected_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BÃ¡nh"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/invoices_selected_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textColor="#818181"
                android:text="SP000"
                android:textSize="14sp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">
                <TextView
                    android:id="@+id/invoices_selected_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#606060"
                    android:text="30000"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/invoices_selected_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="x 1"
                    android:layout_marginLeft="16dp"
                    android:textColor="#2196F3"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    tools:ignore="RtlHardcoded" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/invoices_selected_total"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="30000"
            android:gravity="right"
            android:layout_marginRight="16dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            tools:ignore="HardcodedText,RtlHardcoded" />
    </LinearLayout>

</android.support.v7.widget.CardView>